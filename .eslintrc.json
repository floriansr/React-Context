{
	"env": {
		"browser": true
	},
	"settings": {
		"import/resolver": {
			"node": {
				"moduleDirectory": [
					"node_modules",
					"src" // replace with your app-module-path directory
				]
			}
		}
	},

	"parser": "babel-eslint",
	"plugins": ["prettier"],
	"extends": ["airbnb", "prettier", "prettier/react"],
	"rules": {
		"react/jsx-props-no-spreading": ["off"],
		"no-console": ["off"],

		"jsx-a11y/label-has-associated-control": [
			"warn",
			{
				"labelComponents": [],
				"labelAttributes": [],
				"controlComponents": [],
				"assert": "nesting"
			}
		]
	}
}
